<table>
  <tr>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.sort_by(&:category).each do |category| %>
  <tr>
    <td><%= category.category %></td>
    <td>
      <%= link_to edit_category_path(category), class: "btn btn-mini btn-warning" do %>
      <i class="icon-edit" title="Edit"></i>
      <% end %>
    </td>
    <td>
      <%= link_to category, method: :delete, data: { confirm: 'Are you sure you want to delete this caregory? Other products saved in this category will not be affected.' }, class: "btn btn-mini btn-danger" do %>
      <i class="icon-trash" title="Delete"></i>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />