<%= form_for(@product_maintenance) do |f| %>
  <% if @product_maintenance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product_maintenance.errors.count, "error") %> prohibited this product_maintenance from being saved:</h2>

      <ul>
      <% @product_maintenance.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product_code %><br />
    <%= f.text_field :product_code, placeholder: "3-Digit Alpha Numeric" %>
  </div>
  <div class="field">
    <%= f.label :product_description %><br />
    <%= f.text_area :product_description, rows: 5 %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
    <%= f.select :category, "<option>Beverages</option><option>Boxes</option><option>Bread</option><option>Forms</option><option>Groceries</option><option>In can</option><option>Pizza Crust</option><option>Plastics</option><option>Toppings</option>".html_safe, prompt: "Select category" %>
  <div class="field">
    <%= f.label :po_unit %><br />
    <%= f.select :po_unit, "<option>Case</option><option>Box</option><option>Pack</option><option>Can</option><option>etc</option>".html_safe, prompt: "Please Select a Unit" %>
  </div>
  <div class="field">
    <%= f.label :issue_unit %><br />
    <%= f.select :issue_unit, "<option>Case</option><option>Box</option><option>Pack</option><option>Can</option><option>etc</option>".html_safe, prompt: "Please Select a Unit" %>
  </div>
  <div class="field">
    <%= f.label :subject_to_vat %><br />
    <%= f.check_box :subject_to_vat %>
  </div>
  <div class="field">
    <%= f.label :subject_to_finance_late_charge %><br />
    <%= f.check_box :subject_to_finance_late_charge %>
  </div>
  <div class="field">
    <%= f.label :eligible_for_discount %><br />
    <%= f.check_box :eligible_for_discount %>
  </div>
  <div class="field">
    <%= f.label :purchase_price %><br />
    <%= f.text_field :purchase_price %>
  </div>
  <div class="field">
    <%= f.label :selling_price %><br />
    <%= f.text_field :selling_price %>
  </div>
  <div class="field">
    <%= f.label :raw_materials %><br />
    <%= f.check_box :raw_materials %>
  </div>
  <div class="field">
    <%= f.label :sort_code %><br />
    <%= f.text_field :sort_code %>
  </div>
  <div class="actions">
    <%= f.submit "Save", class: "btn" %>
  </div>
<% end %>
