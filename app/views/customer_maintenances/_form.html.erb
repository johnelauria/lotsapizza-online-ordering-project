      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="span6">
  <div class="field">
    <%= f.label :Franchise_type %><br />
    <%= f.select :customer_type, "<option>Company-Owned</option><option>Franchised</option><option>MetroPizza</option><option>Events</option><option>Others</option>".html_safe, prompt: "Please select customer type" %>
  </div>
  <div class="field">
    <%= f.label :Franchise_name %><br />
    <%= f.text_field :customer_name %>
  </div>
  <div class="field">
    <%= f.label :customer_tax_id %><br />
    <%= f.text_field :customer_tax_id, placeholder: "XXX-XXX-XXX-XXX format" %>
  </div>
  <div class="field">
    Vat Registered 
    <%= f.check_box :vat_registered %>
  </div>
  <div class="field">
    <%= f.label :contact_name %><br />
    <%= f.text_field :contact_name %>
  </div>
  <div class="field">
    <%= f.label :Telephone %><br />
    <%= f.text_field :primary_phone %>
  </div>
  <div class="field">
    <%= f.label :mobile_number %><br />
    <%= f.text_field :mobile_num %>
  </div>
  <div class="field">
    <%= f.label :fax_number %><br />
    <%= f.text_field :fax_num %>
  </div>
  <div class="field">
    <%= f.label :email_address %><br />
    <%= f.text_field :email_address %>
  </div>
    <% if @customer_maintenance.outlet_code.nil? %>
    <div class="field">
      <%= f.label :outlet_code %>
      <%= f.text_field :outlet_code, placeholder: "3 digit code", class: "input-mini" %> 
      <br><small><span class="label label-important">No editing after save</span></small>
    </div>
    <% end %>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation %>
    </div>
  <div class="field">
    <%= f.label :outlet_name %><br />
    <%= f.text_field :outlet_name %>
  </div>
    </div>
  <div class="span6">
    <div class="field">
      <%= f.label :outlet_address %><br />
      <%= f.text_area :outlet_address, rows: 5 %>
    </div>
    <div class="field">
      <%= f.label "Outlet city / Town" %><br />
      <%= f.select :outlet_city, "<option>Las Pi単as</option><option>Cavite</option><option>Pasay</option><option>Makati</option><option>Taguig</option><option>Quezon City</option><option>Laguna</option><option>Muntinlupa</option><option>Ortigas</option>Pasig</option><option>Para単aque</option><option>Manila</option>".html_safe %>
    </div>
    <div class="field">
      <%= f.label "Outlet billing / flag" %><br />
      <%= f.text_field :outlet_billing_flag %>
    </div>
    <div class="field">
      <%= f.label "Billing Address" %><br />
      <%= f.text_area :billing_address, rows: 5 %>
    </div>
    <div class="field">
      <%= f.label "Billing city/town" %><br />
      <%= f.select :billing_city_town, "<option>Las Pi単as</option><option>Cavite</option><option>Pasay</option><option>Makati</option><option>Taguig</option><option>Quezon City</option><option>Laguna</option><option>Muntinlupa</option><option>Ortigas</option>Pasig</option><option>Para単aque</option><option>Manila</option>".html_safe %>
    </div>
    <div class="field">
      <%= f.label "MSF Charge" %><br />
      <%= f.text_field :msf_charge, value: sprintf("%0.02f", 0), class: "input-mini" %> | <%= f.select :msf_charge_computation, "<option>Flat charge</option><option>Percentage of total order</option>".html_safe, prompt: "Please select msf computation" %>
    </div>
    <div class="field">
      <%= f.label :Delivery_charge %><br />
      <%= f.text_field :delivery_charge, value: sprintf("%0.02f", 0), class: "input-mini" %> | <%= f.select :delivery_charge_computation, "<option>Flat Charge</option><option>Percentage of total order</option>".html_safe, prompt: "Please select delivery charge computation" %>
    </div>
    <% if @customer_maintenance.status.nil? %>
      <%= f.hidden_field :status, value: "New" %>
    <% else %>
    <div class="field">
      <%= f.label :status %><br />
      <%= f.select :status, "<option>Active</option><option>Inactive</option><option>New</option><option>On hold</option>".html_safe, prompt: "Please select status" %>
    </div>
    <% end %>
    <div class="field">
      <%= f.label :delivery_group_code %><br />
      <%= f.select :delivery_group_code, "<option>A1</option><option>B1</option><option>A2</option><option>B2</option><option>C1</option><option>D1</option><option>C2</option><option>D2</option><option>E1</option><option>E2</option><option>OTH</option>".html_safe, prompt: "Please select delivery group code" %>
    </div>
    <div class="field">
      <%= f.label :credit_limit %><br />
      <%= f.text_field :credit_limit, class: "input-mini" %>
    </div>
  </div>
</div>

    <div class="actions">
    <%= f.submit "Save", class: "btn" %>
  </div>
<% end %>