<h1>Sales Order Details: </h1>
<%= link_to "Print", home_printable_path, class: "btn" if signed_in? %>
<ul class="nav nav-tabs">
  <li class="active"><a href="#salesOrder" data-toggle="tab">Sales Order Details</a></li>
  <li><a href="#customerDetails" data-toggle="tab">Customer Details</a></li>
</ul>

<div class="tab-content">
  <div id="salesOrder" class="tab-pane active">
<div class="row">
  <div class="span3">
<p>
  <b>Outlet code:</b>
  <%= @so_header.outlet_code %>
</p>

<p>
  <b>Company code:</b>
  <%= @so_header.company_code %>
</p>

<p>
  <b>Outlet name:</b>
  <%= @so_header.outlet_name %>
</p>

<p>
  <b>Customer name:</b>
  <%= @so_header.customer_name %>
</p>

<p>
  <b>Delivery group:</b>
  <%= @so_header.delivery_group %>
</p>

<p>
  <b>So number:</b>
  <%= @so_header.so_number %>
</p>

<p>
  <b>Order date:</b>
  <%= @so_header.order_date %>
</p>

<p>
  <b>Delivery date:</b>
  <%= @so_header.delivery_date %>
</p>

<p>
  <b>Production date:</b>
  <%= @so_header.production_date %>
</p>

<p>
  <b>Total order amount:</b>
  <%= sprintf("P%0.02f", @so_header.total_order_amount) %>
</p>

<p>
  <b>Vat:</b>
  <%= sprintf("P%0.02f", @so_header.vat) %>
</p>

<p>
  <b>Msf charge:</b>
  <%= sprintf("P%0.02f", @so_header.msf_charge) %>
</p>

<p>
  <b>Delivery charge:</b>
  <%= sprintf("P%0.02f", @so_header.delivery_charge) %>
</p>

<p>
  <b>Grand total:</b>
  <%= sprintf("P%0.02f", @so_header.grand_total) unless @so_header.grand_total.nil? %>
</p>

<p>
  <b>Order status:</b>
  <% if @so_header.order_status.nil? %>
      
  <% else %>
    <%= @so_header.order_status %>
  <% end %>
</p>

<p>
  <b>Sales invoice num:</b>
  <% if @so_header.sales_invoice_num.nil? %>
      
  <% else %>
      <%= @so_header.sales_invoice_num %>
  <% end %>
</p>

<p>
  <b>Sales invoice date:</b>
  <% if @so_header.sales_invoice_date.nil? %>
      
  <% else %>
      <%= @so_header.sales_invoice_date %>
  <% end %>
</p>
    </div>
  <div class="span9">
    <%= render 'orders' %>
  </div>
  </div>
  </div>
  <div id="customerDetails" class="tab-pane">
    <p>
      <b>Customer type:</b>
      <%= @so_header.customer_maintenance.customer_type %>
    </p>

    <p>
      <b>Customer name:</b>
      <%= @so_header.customer_maintenance.customer_name %>
    </p>

    <p>
      <b>Customer tax:</b>
      <%= @so_header.customer_maintenance.customer_tax_id %>
    </p>

    <p>
      <b>Vat registered:</b>
      <%= @so_header.customer_maintenance.vat_registered %>
    </p>

    <p>
      <b>Contact name:</b>
      <%= @so_header.customer_maintenance.contact_name %>
    </p>

    <p>
      <b>Primary phone:</b>
      <%= @so_header.customer_maintenance.primary_phone %>
    </p>

    <p>
